<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
    <div class="container new-product-container">
        <h1 class="text-center">Add new product</h1>
        <div class="col-6 offset-3">
            <form action="/products" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" name="product[title]" id="title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" name="product[location]" id="location">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="product[image]" id="image">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price per day</label>
                    <input class="form-control" type="text" name="product[price]" id="price" placeholder="0.00">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" name="product[description]" id="description"></textarea>
                </div>
                <button class="btn-1 submit-btn">Add Product</button>
            </form>
            <a href="/products">Back to products<i class="fas fa-arrow-right"></i></a>
        </div>
    </div>
<%-include('../partials/footer') %>