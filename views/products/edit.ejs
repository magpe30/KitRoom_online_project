<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
    <div class="container new-product-container col-md-5">
        <h1 class="text-center">Edit Product description</h1>
        <form action="/products/<%=product._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" name="product[title]" id="title" value="<%=product.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" name="product[location]" id="location" value="<%=product.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="product[image]" id="image" value="<%=product.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price per day</label>
                <input class="form-control" type="text" name="product[price]" id="price" placeholder="0.00" value="<%= product.price %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <textarea class="form-control" type="text" name="product[description]" id="description"><%= product.description %></textarea>
            </div>
            <button class="btn-1 submit-btn">update</button>
            <a href="/products/<%= product._id%>">Back to the list of products <i class="fas fa-arrow-right"></i></a>
        </form>
    </div>  
<%-include('../partials/footer') %>